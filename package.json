{
  "name": "lit-i18n-tool",
  "displayName": "lit-i18n-tool",
  "description": "让你的多语言项目项目开发更轻松",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.47.0"
  },
  "categories": [
    "Other"
  ],
  "publisher": "wusong",
  "repository": {
    "type": "git",
    "url": "https://github.com/WUSO01/lit-i18n-tool"
  },
  "author": {
    "name": "WUSO01",
    "url": "https://github.com/WUSO01"
  },
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:javascript",
    "onLanguage:html"
  ],
  "main": "./out/extension.js",
  "icon": "icon.png",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "lit-i18n-tool",
      "properties": {
        "lit-i18n-tool.func": {
          "type": "string",
          "default": "t",
          "description": "i18n函数的名称"
        },
        "lit-i18n-tool.filePath": {
          "type": "string",
          "default": "public/locales/zh/translation.json",
          "description": "中文翻译JSON文件位置，如果JSON文件不存在，则会在当前目录生成此JSON文件"
        }
      }
    },
    "commands": [
      {
        "command": "lit-i18n-tool.replaceSingle",
        "title": "lit-i18n-tool: 替换选择的文本"
      },
      {
        "command": "lit-i18n-tool.updateKey",
        "title": "lit-i18n-tool: 更新key"
      }
    ],
    "keybindings": [
      {
        "command": "lit-i18n-tool.replaceSingle",
        "key": "shift+cmd+i",
        "mac": "shift+cmd+i",
        "when": "editorHasSelection"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorHasSelection && resourceFilename =~ /.ts|.js|.html/",
          "command": "lit-i18n-tool.replaceSingle",
          "group": "1_i18n"
        },
        {
          "when": "editorHasSelection && resourceFilename =~ /.ts|.js|.html/",
          "command": "lit-i18n-tool.updateKey",
          "group": "1_i18n"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.1",
    "@types/glob": "^7.1.1",
    "@types/lodash": "^4.14.161",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "@types/vscode": "^1.47.0",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "eslint": "^6.8.0",
    "glob": "^7.1.6",
    "mocha": "^7.1.2",
    "vscode-test": "^1.3.0"
  },
  "dependencies": {
    "@phenomnomnominal/tsquery": "^4.1.1",
    "fs-extra": "^9.0.1",
    "lodash": "^4.17.20",
    "typescript": "^4.1.2"
  }
}